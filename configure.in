      if test "x${ac_cv_gpe_headers}" = "xyes"
      then
        familiar_CFLAGS="${familiar_CFLAGS} ${gpe_CFLAGS}"
        familiar_LDFLAGS="${familiar_LDFLAGS} ${gpe_LDFLAGS}" 
      fi
    fi 
    if test "x${ac_cv_gtk_headers}" = "xyes"
    then
      PLUGINS="${PLUGINS} familiar"
    fi
    CPPFLAGS="${save_CPPFLAGS}"
  fi
fi

